
<section class="hero is-fullheight is-dark is-bold">
  <div class="hero-body">
    <div class="container">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

      <div class="columns is-vcentered">
        <div class="column is-4 is-offset-4">
          <h1 class="title">
            Register an Account
          </h1>
          <div class="box">

            <div class="field">
              <%= f.label :first_name, class:"label" %><br />
              <p class="control">
              <%= f.text_field :first_name, class:"input"%>
              </p>
            </div>


            <div class="field">
              <%= f.label :last_name, class:"label" %><br />
              <p class="control">
              <%= f.text_field :last_name, class:"input"%>
              </p>
            </div>

            <div class="field">
              <%= f.label :email, class:"label" %><br />
              <p class="control">
              <%= f.email_field :email, autofocus: true, class:"input"%>
              </p>
            </div>


            <hr>

            <div class="field">
              <%= f.label :password, class:"label" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <p class="control">
              <%= f.password_field :password, class:"input"%>
              </p>
            </div>


            <div class="field">
              <%= f.label :password_confirmation, class:"label" %><br />
              <p class="control">
                <%= f.password_field :password_confirmation, class: "input", autocomplete: "off" %>
              </p>
            </div>

            <div class="field">
              <%= f.label :role, class: "label" %>
              <p class="control">
              <span class="select">
                <%= f.select :role, ["developer", "business owner","admin"], class: "select" %>
              </span>
              </p>
            </div>

            <hr>

            <div class="actions ">
              <%= f.submit "Sign up", {:style=>'width:10em', :class => "button is-primary"} %>
            </div>


        </div>
        <%= render "devise/shared/links" %>
      </div>

        <% end %>
    </div>
  </div>


</section>
