
<section class="hero is-fullheight is-dark is-bold">
  <div class="hero-body">
    <div class="container">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

      <div class="columns is-vcentered">
        <div class="column is-4 is-offset-4">
          <h1 class="title">
            Log In
          </h1>
          <div class="box">

            <div class="field">
              <%= f.label :email, class:"label" %><br />
              <p class="control">
              <%= f.email_field :email, autofocus: true, class:"input"%>
              </p>
            </div>

            <div class="field">
              <%= f.label :password, class:"label" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <p class="control">
              <%= f.password_field :password, autocomplete: "off", class:"input"%>
              </p>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, class:"checkbox"%><%= f.label :remember_me, class: "label"%>
              </div>
            <% end %>

            <div class="actions ">
              <%= f.submit "Log In", {:style=>'width:10em', :class => "button is-primary"} %>
            </div>


        </div>
        <%= render "devise/shared/links" %>
      </div>

        <% end %>
    </div>
  </div>


</section>
