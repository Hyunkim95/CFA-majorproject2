
  <%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
      <div class="field">
        <%= f.label :recipients, class:"label has-text-left"%>
        <p class="control">
        <%= f.select(:recipients, User.all.collect {|p| [ p.name, p.id ] }, {}, { multiple: true , class: "chosen-select input" })%>
        </p>
      </div>
      <div class="field">
        <%= f.label :subject, class:"label"%>
        <p class="control">
        <%= f.text_field :subject, placeholder: "Subject", class: "input" %>
        </p>
      </div>
      <div class="field">
        <%= f.label :message, class:"label" %>
        <p class="control">
        <%= f.text_area :body, class: 'input',placeholder: "Type your message here", rows:10%>
        </p>
      </div>

      <%= f.submit "Send Message", {:style=>'width:10em', :class => "button is-primary"} %>

  <% end %>
